---
Language: Cpp
BasedOnStyle: LLVM
ColumnLimit: 80
IndentWidth: 4
ContinuationIndentWidth: 8
AccessModifierOffset: -4
AllowShortFunctionsOnASingleLine: Inline
AlwaysBreakTemplateDeclarations: true
DerivePointerAlignment: false
PointerAlignment: Left

IncludeIsMainRegex: '(_tests)?$'
IncludeBlocks: Regroup
IncludeCategories:
  - Regex:           '^"'
    Priority:        1
  - Regex:           '^<(engine|editor|launcher|game)/'
    Priority:        2
  - Regex:           '^<(glad|KHR|GLFW|catch|glm|spdlog)/'
    Priority:        3
  - Regex:           '^<(BulletCollision|BulletDynamics|BulletInverseDynamics|BulletSoftBody|LinearMath)/'
    Priority:        3
  - Regex:           '^<(btBulletCollisionCommon|btBulletDynamicsCommon)'
    Priority:        3
  - Regex:           '.*'
    Priority:        4

BreakBeforeBraces: Custom
BraceWrapping:
  AfterClass: false
  AfterControlStatement: false
  AfterEnum: false
  AfterFunction: false
  AfterNamespace: false
  AfterObjCDeclaration: false
  AfterStruct: false
  AfterUnion: false
  AfterExternBlock: false
  BeforeCatch: true
  BeforeElse: true
  IndentBraces: false
  SplitEmptyFunction: true
  SplitEmptyRecord: true
  SplitEmptyNamespace: true

...
